<div class="container">
	<div class="row">
		<div class="col-8">

			<%= "#{@posts.size.to_s} active posts found."%>
			
				<% @posts.each do |post|%>
				<div class="insta-post"></div>

				<div class="post-meta"> 
					<%= post.account.username %> 
				</div>


				<%= image_tag post.image.url, class: 'img img-fluid' %>
		</div>
			<% end %>
		</div>
		<div class="col-4">
			<div class="account-summary">
				<%= current_account.username %> <br>
				
			</div>
		</div>
	</div>
</div>